{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "richtext"
    },
    "body": {
      "type": "customField",
      "options": {
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "preview": {
      "type": "customField",
      "customField": "plugin::pagepreview.page-preview"
    }
  }
}
